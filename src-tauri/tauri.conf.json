{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ClawTab",
  "version": "0.1.0",
  "identifier": "com.tgs.clawtab",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1427",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "trayIcon": {
      "id": "main",
      "iconPath": "icons/tray-icon.png",
      "iconAsTemplate": true
    },
    "windows": [
      {
        "label": "settings",
        "url": "/settings.html",
        "width": 900,
        "height": 700,
        "visible": false,
        "center": true,
        "title": "ClawTab"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.15"
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDJEMDU4NTgyMTIzRkQ3MjMKUldRajF6OFNnb1VGTFFYSkl0RnR2SkRWTXE3YXpvUWNtaXhCUDBFcWliM0MyNThxVGMwZ1FwejQK",
      "endpoints": ["https://github.com/tonisives/clawtab/releases/latest/download/latest.json"]
    },
    "deep-link": {
      "desktop": {
        "schemes": ["clawtab"]
      }
    }
  }
}
