{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ClawdTab",
  "version": "0.1.0",
  "identifier": "com.tgs.clawdtab",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1427",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "trayIcon": {
      "id": "main",
      "iconPath": "icons/tray-icon.png",
      "iconAsTemplate": true
    },
    "windows": [
      {
        "label": "settings",
        "url": "/settings.html",
        "width": 900,
        "height": 700,
        "visible": false,
        "center": true,
        "title": "ClawdTab"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.15"
    }
  }
}
